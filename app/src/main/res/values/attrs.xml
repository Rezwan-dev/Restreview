<resources>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startXPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BlurView">
        <attr name="blurRadius" format="integer"/>
        <attr name="downSampleFactor" format="integer"/>
        <attr name="overlayColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="password_edit_text">

        <attr name="show_drawable" format="integer"/>
        <attr name="hide_drawable" format="integer"/>
        <attr name="password_visible" format="boolean"/>
        <attr name="show_as_text" format="boolean"/>
        <attr name="hide_text" format="string"/>
        <attr name="show_text" format="string"/>
    </declare-styleable>



    <declare-styleable name="TranslucentView">
        <attr name="translucentBackgroundColor" format="color" />
    </declare-styleable>


    <integer name="default_blur_radius">11</integer>
    <integer name="default_downsample_factor">6</integer>
    <color name="default_overlay_color">#78999999</color>

</resources>